    <MapDefinition name="Cave" width="50~100" height="50~100" fillTile="FakeStone">
        <GenerationSteps>
            <RoomsAndPaths>
                <Rooms count="5~15" width="10~20" height="10~20" floor="CaveDirtFloor" wall="StoneWall"/>
                <Paths floor="CaveDirtFloor" loop="true"/>
            </RoomsAndPaths>
            <!-- Walls -->
            <CellularAutomata ifIsType="FakeStone" ifNeighborType="CaveDirtFloor" changeToType="CaveDirtFloor"/>
            <CellularAutomata ifIsType="StoneWall" ifNeighborType="FakeStone" ifNumNeighbors="1" changeToType="CaveDirtFloor"/>
            <CellularAutomata ifIsType="FakeStone" ifNeighborType="CaveDirtFloor" changeToType="StoneWall"/>
            <!-- Stairs -->
            <Sprinkle ifIsType="CaveDirtFloor" changeToType="StairsDown" setTags="stairsDown" count="1"/>
            <CellularAutomata ifIsType="CaveDirtFloor" ifNeighborType="StairsDown" setTags="stairsDownAccess"/>
            <Sprinkle ifIsType="CaveDirtFloor" changeToType="StairsUp" setTags="stairsUp" count="1"/>
            <CellularAutomata ifIsType="CaveDirtFloor" ifNeighborType="StairsUp" setTags="stairsUpAccess"/>
            <!-- Merchant -->
            <Sprinkle chanceToRun="0.5" ifHasTags="stairsDownAccess" ifIsType="CaveDirtFloor" spawnActor="Merchant" controller="Merchant" setTags="merchant" count="1"/>
            <CellularAutomata ifNeighborHasTags="merchant" setTags="merchantAccess"/>
            <!-- Skeletons -->
            <Sprinkle ifIsType="CaveDirtFloor" spawnActor="SkeletonMale" controller="Enemy" count="20"/>
        </GenerationSteps>
    </MapDefinition>
    <MapDefinition name="DD1" width="24" height="14" fillTile="FakeStone">
        <GenerationSteps>
            <FromImage imageFilePath="Data/Images/DD1.png" numRotations="0" alignX="0.5" alignY="0.5"/>
            <!-- Stairs -->
            <CellularAutomata ifIsType="StairsUp" ifNeighborType="Grass" setTags="stairsUp"/>
            <CellularAutomata ifIsType="Grass" changeToType="CaveDirtFloor" setTags="stairsUpAccess"/>
            <CellularAutomata ifIsType="StairsDown" setTags="stairsDown"/>
            <CellularAutomata ifIsType="Water" changeToType="CaveDirtFloor" setTags="stairsDownAccess"/>
        </GenerationSteps>
    </MapDefinition>
    <MapDefinition name="DD2" width="24" height="14" fillTile="FakeStone">
        <GenerationSteps>
            <FromImage imageFilePath="Data/Images/DD2.png" numRotations="0" alignX="0.5" alignY="0.5"/>
            <!-- Stairs -->
            <CellularAutomata ifIsType="StairsUp" ifNeighborType="Grass" setTags="stairsUp"/>
            <CellularAutomata ifIsType="Grass" changeToType="CaveDirtFloor" setTags="stairsUpAccess"/>
            <!-- Credits -->
            <CellularAutomata ifIsType="Water" changeToType="CaveDirtFloor" spawnActor="Credits" controller="Credits" setTags="credits"/>
            <CellularAutomata ifIsType="CaveDirtFloor" ifNeighborHasTags="credits" setTags="creditsAccess"/>
        </GenerationSteps>
    </MapDefinition>
    <MapDefinition name="Cavern" width="100" height="100" fillTile="EdgedSand" edgeTile="EdgedWater">
        <GenerationSteps>
            <!-- Lake -->
            <PerlinNoise ifIsType="EdgedSand" ifNoise="0.8~1" octaves="1" gridSize="20" changeToType="EdgedWater" setTags="Lake"/>
            <PerlinNoise ifIsType="EdgedSand" ifNoise="-1~-0.8" octaves="1" gridSize="20" changeToType="EdgedWater" setTags="Lake"/>
            <DistanceField ifHasTags="Lake" movementType="Walk"/>
            <CellularAutomata ifDistanceField="1~2" setTags="NearLake"/>
            <!-- River -->
            <PerlinNoise ifIsType="EdgedSand" ifNoise="-0.1~0.1" octaves="1" gridSize="30" changeToType="EdgedWater" setTags="River"/>
            <DistanceField ifHasTags="River" movementType="Walk"/>
            <CellularAutomata ifDistanceField="1~2" setTags="NearRiver"/>
            <CellularAutomata ifHasTags="NearLake,NearRiver" ifIsType="EdgedSand" changeToType="EdgedWater"/>
            <CellularAutomata ifIsType="EdgedSand" ifNeighborType="EdgedWater" ifNumNeighbors="7~8" changeToType="EdgedWater" numIterations="5"/>
            <CellularAutomata ifIsType="EdgedWater" ifNeighborType="EdgedSand" ifNumNeighbors="8" changeToType="EdgedSand"/>
            <!-- Cliff -->
            <CellularAutomata ifIsType="EdgedSand" ifNeighborType="EdgedWater" changeToType="CliffGrass"/>
            <DistanceField ifIsType="CliffGrass" movementType="Walk"/>
            <CellularAutomata ifIsType="EdgedSand" ifDistanceField="0~3" changeToType="EdgedGrass"/>
            <!-- Stairs -->
            <Sprinkle ifIsType="EdgedSand" changeToType="StairsDown" setTags="stairsDown" count="1"/>
            <CellularAutomata ifIsType="EdgedSand" ifNeighborType="StairsDown" setTags="stairsDownAccess"/>

            <DistanceField ifIsType="StairsDown" movementType="Walk"/>
            <Sprinkle ifIsType="EdgedSand" ifDistanceField="0~999998" changeToType="StairsUp" setTags="stairsUp" count="1"/>
            <CellularAutomata ifIsType="EdgedSand" ifNeighborType="StairsUp" setTags="stairsUpAccess"/>
        </GenerationSteps>
    </MapDefinition>
</MapDefinitions>